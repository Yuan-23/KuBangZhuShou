<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mine.activity.EditInfoActivity">

    <com.coupon.coupon580.core.widget.MyToolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="信息发布">

    </com.coupon.coupon580.core.widget.MyToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/coupon_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/coupon_title_text"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:text="标  题:"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/coupon_title_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="请输入优惠券标题"
                    android:inputType="textPersonName"
                    android:textColorHint="#dbdbdb" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/coupon_content"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/coupon_content_text"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:text="简  述:"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/coupon_content_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="请简述优惠券内容"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:textColorHint="#dbdbdb" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/coupon_attr"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/coupon_attr_text"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:text="关键字:"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/coupon_attr_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="请输入优惠券关键字"
                    android:inputType="textPersonName"
                    android:textColorHint="#dbdbdb" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/coupon_picture"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/coupon_p_t"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/coupon_picture_text"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:text="上传图片:"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16dp" />

                    <RelativeLayout
                        android:id="@+id/coupon_upload_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/coupon_picture_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_marginEnd="6dp"
                            android:layout_toStartOf="@+id/coupon_uploadpic"
                            android:gravity="center_vertical"
                            android:text="待上传"
                            android:textColor="@color/color_5c5c5c"
                            android:textSize="16dp" />

                        <ImageButton
                            android:id="@+id/coupon_uploadpic"
                            android:layout_width="8dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:layout_marginEnd="12dp"
                            android:background="@color/white"
                            app:srcCompat="@drawable/picture_upload" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <com.coupon.coupon580.core.widget.SquareImageView
                        android:id="@+id/Coupon_send_iv1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        tools:srcCompat="@drawable/default_image" />

                    <com.coupon.coupon580.core.widget.SquareImageView
                        android:id="@+id/Coupon_send_iv2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        tools:srcCompat="@drawable/default_image" />

                    <com.coupon.coupon580.core.widget.SquareImageView
                        android:id="@+id/Coupon_send_iv3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        tools:srcCompat="@drawable/default_image" />

                    <com.coupon.coupon580.core.widget.SquareImageView
                        android:id="@+id/Coupon_send_iv4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        tools:srcCompat="@drawable/default_image" />

                    <com.coupon.coupon580.core.widget.SquareImageView
                        android:id="@+id/Coupon_send_iv5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        tools:srcCompat="@drawable/default_image" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/coupon_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/coupon_address_text"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:text="领券地址:"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/coupon_address_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:ems="10"
                    android:hint="请输入优惠券地址(包含https)"
                    android:inputType="textPersonName"
                    android:textColorHint="#dbdbdb" />

            </LinearLayout>


            <TextView
                android:id="@+id/coupon_check"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/withdraw_btn_bg"
                android:gravity="center"
                android:text="发  布"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>